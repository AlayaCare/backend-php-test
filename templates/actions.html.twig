{% if currentPage is defined %}
    {% set args = {'id': todo.id, 'page': currentPage} %}
{% else %}
    {% set args = {'id': todo.id} %}
{% endif %}

<form method="post" action="{{ path('todos-delete', args) }}">
    <button type="submit" class="btn btn-xs btn-danger">
        <span class="glyphicon glyphicon-remove glyphicon-white"></span>
    </button>
</form>
<form method="post" action="{{ path('todos-complete', args) }}">
    <button type="submit" class="btn btn-xs btn-{{ todo.completed ? 'success' : 'default'}} btn-completed">
        <span class="glyphicon glyphicon-{{ todo.completed ? 'check' : 'unchecked'}}"></span>
    </button>
</form>
