{% extends "layout.html.twig" %}

{% block content %}
<div class="col-md-4 col-md-offset-4">
    <h1>Todo:</h1>

    {% for message in app.session.getFlashBag.get('success') %}
        <div class="alert alert-success" >
            <button class="close" data-dismiss="alert">Ã—</button>
            {{ message }}
        </div>
    {% endfor %}

    <table class="table table-striped">
        <th>#</th>
        <th>Description</th>
        <th colspan="2"></th>
        <tr class="{{ todo.completed ? 'completed' : '' }}">
            <td>{{ todo.id }}</td>
            <td class="description">{{ todo.description }}</td>
            <td class="actions">
                {% include 'actions.html.twig' with {'todo': todo} only %}
            </td>
        </tr>
    </table>
</div>

{% endblock %}
